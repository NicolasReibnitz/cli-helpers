{
	"name": "@das.laboratory/cli-helpers",
	"version": "1.0.0",
	"description": "A collection of wheels I don&#39;t want to reinvent over and over again anymore.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/NicolasReibnitz/cli-helpers.git"
	},
	"author": {
		"name": "Nicolas Reibnitz",
		"email": "n.reibnitz@gmail.com",
		"url": "https://daslaboratory.com"
	},
	"homepage": "https://github.com/NicolasReibnitz/cli-helpers#readme",
	"bugs": {
		"url": "https://github.com/NicolasReibnitz/cli-helpers/issues"
	},
	"main": "dist/main.cjs",
	"module": "dist/module.mjs",
	"type": "module",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "parcel build",
		"bump:major": "npm version major -f -m \"[v%s] $npm_config_message\"",
		"bump:minor": "npm version minor -f -m \"[v%s] $npm_config_message\"",
		"bump:patch": "npm version patch -f -m \"[v%s] $npm_config_message\"",
		"postversion": "git push && git push --tags && npm publish",
		"preversion": "git add .",
		"test": "xo && ava",
		"version": "git add .",
		"watch": "parcel watch"
	},
	"files": [
		"dist/main.cjs",
		"dist/module.mjs",
		"src/"
	],
	"keywords": [
		""
	],
	"dependencies": {
		"@das.laboratory/prettier-config-interactive": "^2.0.0",
		"boxen": "^5.0.1",
		"chalk": "^4.1.2",
		"cli-table3": "^0.6.0",
		"deasync": "^0.1.23",
		"del": "^6.0.0",
		"meow": "^10.1.1",
		"pad-component": "^0.0.1",
		"press-any-key": "^0.1.1",
		"sync-rpc": "^1.3.6",
		"wide-align": "^1.1.3",
		"wrap-ansi": "^8.0.0"
	},
	"devDependencies": {
		"ava": "^3.15.0",
		"parcel": "latest",
		"xo": "^0.38.0"
	},
	"source": "src/index.js",
	"targets": {
		"main": {
			"context": "node",
			"engines": {
				"node": ">= 12"
			},
			"outputFormat": "commonjs",
			"isLibrary": true
		},
		"module": {
			"context": "node",
			"engines": {
				"node": ">= 12"
			},
			"outputFormat": "esmodule",
			"isLibrary": true
		}
	},
	"xo": {
		"ignores": [
			"examples/sections/**"
		],
		"prettier": true,
		"rules": {
			"capitalized-comments": "off"
		}
	}
}
